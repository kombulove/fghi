#!/bin/bash
[[ -d raw ]] || mkdir raw

echo Updating makemeahanzi ...
if [[ ! -d raw/makemeahanzi ]]; then
  cd raw && git clone --depth 1 git@github.com:skishore/makemeahanzi.git && cd ..
fi
cd raw/makemeahanzi && git pull && cd ../..

echo Updating hskhsk ...
[[ -d raw/hskhsk ]] || mkdir raw/hskhsk
for i in {1..6}; do
  if [[ ! -f raw/hskhsk/$i.tsv ]]; then
    wget -O raw/hskhsk/$i.tsv "https://raw.githubusercontent.com/glxxyz/hskhsk.com/main/data/lists/HSK%20Official%20With%20Definitions%202012%20L${i}.txt"
  else
    echo $i.tsv already downloaded.
  fi
done
